<fx:root prefHeight="556.0" prefWidth="754.0" style="-fx-background-color: #131620;" stylesheets="@../styles/application.css"  type="StackPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mainLogin.UpdateWindow">
   <children>
      <BorderPane>
         <bottom>
            <StackPane style="-fx-border-color: firebrick transparent transparent transparent;" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="closeWindow" mnemonicParsing="false" text="Вихід" StackPane.alignment="CENTER_RIGHT">
                     <tooltip>
                        <Tooltip text="Close the Window" />
                     </tooltip>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/x.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <HBox alignment="CENTER" pickOnBounds="false" spacing="5.0">
                     <children>
                        <Button fx:id="automaticUpdate" mnemonicParsing="false" text="Оновити програму">
                           <tooltip>
                              <Tooltip text="Automatic Update Download" />
                           </tooltip>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <graphic>
                              <ImageView pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/Installing%20Updates-32.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="7.0" top="7.0" />
                     </padding>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets left="3.0" right="3.0" top="5.0" />
               </BorderPane.margin>
            </StackPane>
         </bottom>
         <center>
            <JFXTabPane fx:id="tabPane" styleClass="specialJFXTabPane" BorderPane.alignment="CENTER">
               <tabs>
                  <Tab fx:id="whatsNewTab" closable="false" styleClass="sTab" text="Що нового">
                     <content>
                        <BorderPane fx:id="whatsNewContainer" />
                     </content>
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/balloons.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Tab>
                  <Tab fx:id="upcomingFeaturesTab" closable="false" styleClass="sTab" text="Додавання функціоналу">
                     <content>
                        <BorderPane fx:id="upcomingFeaturesContainer" />
                     </content>
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/flask.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Tab>
                  <Tab fx:id="releasesHistoryTab" closable="false" disable="true" styleClass="sTab">
                     <content>
                        <ScrollPane fitToHeight="true" fitToWidth="true">
                           <content>
                              <Accordion fx:id="gitHubAccordion" />
                           </content>
                        </ScrollPane>
                     </content>
                  </Tab>
               </tabs>
            </JFXTabPane>
         </center>
         <top>
            <Label fx:id="topLabel" alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="46.0" style="-fx-font-size: 15;" styleClass="applicationSettingsLabel2" text="Top Bar  " BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="5.0" />
               </BorderPane.margin>
            </Label>
         </top>
